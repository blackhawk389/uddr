<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="60dp"
    app:cardBackgroundColor="@color/card_color"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/demo" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/review_ratingBar"
                android:layout_toRightOf="@+id/store_image">


                <com.uk.uddr.utils.CTextBold
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milkman"
                    android:textColor="@color/uddrblack"
                    android:textSize="15sp" />


                <com.uk.uddr.utils.CTextSemiBold
                    android:id="@+id/store_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/store_name"
                    android:maxLines="1"
                    android:text="Milkman"
                    android:textColor="@color/uddrblack"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RatingBar
                android:id="@+id/review_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/RatingBar" />

            <com.uk.uddr.utils.CTextBold
                android:id="@+id/txt_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review_ratingBar"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:text="4 Reviews"
                android:textColor="@color/dark_grey"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/rel_head">

            <RelativeLayout
                android:id="@+id/rel_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_map"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_location" />

                <com.uk.uddr.utils.CTextSemiBold
                    android:id="@+id/store_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/icon_map"
                    android:maxLines="1"
                    android:text="Mohali "
                    android:textColor="@color/uddrblack"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_store_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/rel_store_address">

                <ImageView
                    android:id="@+id/icon_map1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_distance" />

                <com.uk.uddr.utils.CTextSemiBold
                    android:id="@+id/store_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/icon_map1"
                    android:maxLines="1"
                    android:text="3.0"
                    android:textColor="@color/uddrblack"
                    android:textSize="12sp" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>
