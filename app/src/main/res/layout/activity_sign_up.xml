                    android:layout_toRightOf="@+id/relative_contact"
                    android:text="Username"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
