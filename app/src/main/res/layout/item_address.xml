<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_cardview"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp"
    android:elevation="30dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/RnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.uk.uddr.utils.CTextBold
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textStyle="bold"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/menu" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_flat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RnTitle">

            <com.uk.uddr.utils.CTextBold
                android:id="@+id/txt_flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flat No. 100"
                android:textSize="15sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_flat">

            <com.uk.uddr.utils.CTextBold
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Chandigarh"
                android:textSize="15sp" />


            <RelativeLayout
                android:id="@+id/relative_click"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">


                <ImageView
                    android:id="@+id/icon_tick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/check_mark"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>


        <com.uk.uddr.utils.CTextBold
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_address"
            android:text="Mohali"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
