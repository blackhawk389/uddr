<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:minHeight="210dp"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    android:id="@+id/rel_main"
    android:layout_margin="8dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_storetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_cardview"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:elevation="30dp"
                android:padding="10dp"
                app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:src="@drawable/demo" />
            </android.support.v7.widget.CardView>

            <com.uk.uddr.utils.CTextBold
                android:id="@+id/title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textSize="15sp"/>

            <com.uk.uddr.utils.CTextSemiBold
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="0dp"
                android:textSize="12sp"
                android:id="@+id/txt_tag_line"
                android:textColor="@color/dark_grey"
                android:text="Try us and see the quality"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/dotted_bg"
                android:layout_marginRight="8dp"/>

            <com.uk.uddr.utils.CTextregular
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:id="@+id/txt_des"
                android:textColor="@color/dark_grey"
                android:text="Now it seems to only want to scale evenly and won't let me scale however"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>