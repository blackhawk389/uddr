<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_main"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:id="@+id/relative_head"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_cardview"
            android:layout_width="100dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:elevation="30dp"
            >

            <ImageView
                android:id="@+id/img_store"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/demo" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image_cardview"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp">

            <com.uk.uddr.utils.CTextBold
                android:id="@+id/txt_stitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:maxLines="1"
                android:text="The Milk Store"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.uk.uddr.utils.CTextregular
                android:id="@+id/txt_stype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:maxLines="1"
                android:text="The Milk Store"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/review_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar" />


                <com.uk.uddr.utils.CTextregular
                    android:id="@+id/txt_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/review_ratingBar"
                    android:text="(8 reviews)"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="14dp">

                <ImageView
                    android:id="@+id/img_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_location" />

                <com.uk.uddr.utils.CTextSemiBold
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_loc"
                    android:layout_marginLeft="4dp"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </LinearLayout>



