<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/header">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/rel_back"
            android:background="@drawable/btn_circle_green">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:elevation="8dp"
                android:src="@mipmap/back_arrow" />
        </RelativeLayout>

        <com.uk.uddr.utils.CTextBold
            android:id="@+id/txt_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rel_back"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/uddrblack"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold" />



    </RelativeLayout>





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/header"
        android:id="@+id/img_store_background"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_store_background"
        android:id="@+id/rel_storeinfo"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/store_logo"/>

        <com.uk.uddr.utils.CTextBold
            android:id="@+id/store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/store_logo"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.uk.uddr.utils.CTextBold
            android:id="@+id/store_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/store_logo"
            android:layout_below="@+id/store_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/dark_grey"
            android:maxLines="1"
            android:textSize="14sp"
            android:textStyle="bold" />


        <!--<ImageView-->
            <!--android:id="@+id/icon_map"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_below="@+id/store_desc"-->
            <!--android:layout_toRightOf="@id/store_logo"-->
            <!--android:src="@mipmap/ic_location_g" />-->


        <com.uk.uddr.utils.CTextregular
            android:id="@+id/store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/store_logo"
            android:layout_below="@+id/store_desc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/light_grey1"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.uk.uddr.utils.CTextBold
            android:id="@+id/store_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_map"
            android:layout_below="@+id/store_address"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_marginRight="30dp"
            android:textColor="@color/dark_grey"
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/rel_storeinfo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/view1"
        android:layout_marginRight="30dp"
        android:background="@color/light_grey"/>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            app:tabIndicatorColor="@color/green"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/light_black"
            app:tabTextColor="@color/uddrblack" />
    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

    </android.support.v7.widget.RecyclerView>


